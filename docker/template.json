{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "us-east-2",
            "source_ami": "ami-10547475",
            "instance_type": "t2.micro",
            "ssh_username": "ubuntu",
            "ami_name": "ubuntu-16.04-docker-ce-edge {{timestamp}}",
            "tags": {
                "Name": "Docker host - Ubuntu 16.04",
                "OS_Version": "Ubuntu",
                "Release": "16.04",
                "Type": "Docker"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": ["sleep 30"]
        },
        {
            "type": "shell",
            "script": "./init.sh"
        }
    ]
}